{
	"name": "forgingmodernity.com",
	"type": "module",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "astro dev",
		"build": "astro build --port 9998",
		"preview": "astro preview",
		"serve": "astro build; astro preview",
		"test": "is-ci-cli test:coverage test:watch",
		"test:coverage": "vitest --coverage --run --api.port 9999",
		"test:watch": "vitest --watch",
		"test:debug": "node --inspect-brk ./node_modules/jest/vitest.mjs --runInBand --watch",
		"test:e2e": "is-ci-cli test:e2e:run test:e2e:dev",
		"test:e2e:run": "CYPRESS_PROD_BUILD=true start-server-and-test serve http://localhost:3000 cy:run",
		"test:e2e:dev": "CYPRESS_PROD_BUILD=false start-server-and-test dev http://localhost:3000 cy:open",
		"test:e2e:dev:prod": "CYPRESS_PROD_BUILD=true start-server-and-test serve http://localhost:3000 cy:open",
		"cy:run": "cypress run --env type=cli",
		"cy:open": "cypress open --env type=browser",
		"lint": "run-p lint:js lint:css lint:format lint:svelte lint:astro",
		"lint:js": "eslint ./src --ext .js,.jsx,.ts,.tsx,.astro,.svelte",
		"lint:css": "stylelint \"./src/**/*.{astro,css,scss,svelte}\"",
		"lint:format": "prettier --check \"./src/**/*.{astro,js,jsx,ts,tsx,css,scss,md,svelte}\"",
		"lint:svelte": "svelte-check --tsconfig ./tsconfig.json --compiler-warnings css-unused-selector:ignore",
		"lint:astro": "astro check",
		"format": "prettier --write \"./src/**/*.{astro,js,jsx,ts,tsx,css,scss,md,svelte}\"",
		"netlify": "run-p test:coverage build && cp -r coverage public/coverage",
		"prepare": "husky install"
	},
	"dependencies": {
		"@astrojs/image": "^0.17.0",
		"@astrojs/sitemap": "^1.3.3",
		"@astrojs/svelte": "^3.0.0",
		"@fontsource/marcellus": "^5.0.2",
		"@fontsource/marcellus-sc": "^5.0.2",
		"@fontsource/vollkorn": "^5.0.2",
		"@fontsource/vollkorn-sc": "^5.0.2",
		"@iconify-icons/icon-park": "^1.2.11",
		"@iconify-icons/mdi": "^1.2.46",
		"@iconify/svelte": "^3.1.4",
		"astro": "^2.6.2",
		"astro-icon": "^0.8.1",
		"astro-purgecss": "^2.0.1",
		"astro-seo": "^0.7.4",
		"include-media": "^2.0.0",
		"plaiceholder": "^3.0.0",
		"sharp": "^0.32.1",
		"svelte": "^3.59.1"
	},
	"devDependencies": {
		"@testing-library/cypress": "^9.0.0",
		"@types/leaflet": "^1.9.3",
		"@types/node": "^20.2.5",
		"@typescript-eslint/eslint-plugin": "^5.59.9",
		"@typescript-eslint/parser": "^5.59.9",
		"@vitest/coverage-v8": "^0.32.0",
		"autoprefixer": "^10.4.14",
		"axe-core": "^4.7.2",
		"cssnano": "^6.0.1",
		"cypress": "^12.14.0",
		"cypress-axe": "^1.4.0",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-astro": "^0.27.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"is-ci-cli": "^2.2.0",
		"leaflet": "^1.9.4",
		"lint-staged": "^13.2.2",
		"npm-run-all": "^4.1.5",
		"postcss-html": "^1.5.0",
		"prettier": "^2.8.8",
		"prettier-plugin-astro": "^0.10.0",
		"prettier-plugin-svelte": "^2.10.1",
		"sass": "^1.63.3",
		"start-server-and-test": "^2.0.0",
		"stylelint": "^15.7.0",
		"stylelint-config-html": "^1.1.0",
		"stylelint-config-standard-scss": "^9.0.0",
		"svelte-check": "^3.4.3",
		"tslib": "^2.5.3",
		"typescript": "^5.1.3",
		"vite": "^4.3.9",
		"vitest": "^0.32.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Zweihander-Main/forgingmodernity.com"
	},
	"lint-staged": {
		"./src/**/*.+(js|jsx|ts|tsx|astro|svelte)": [
			"eslint"
		],
		"./src/**/*.+(css|scss|astro|svelte)": [
			"stylelint"
		],
		"./src/**/*.{astro,js,jsx,ts,tsx,css,scss,md,svelte}": [
			"prettier --check"
		],
		"./src/**/*.{svelte}": [
			"svelte-check --tsconfig ./tsconfig.json --compiler-warnings css-unused-selector:ignore"
		],
		"./src/**/*.{astro}": [
			"astro check"
		]
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"project": "tsconfig.json",
			"extraFileExtensions": [
				".astro",
				".svelte"
			],
			"ecmaVersion": 2023
		},
		"env": {
			"browser": true,
			"node": true
		},
		"plugins": [
			"@typescript-eslint"
		],
		"rules": {
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": [
				"error",
				{
					"allow": [
						"warn",
						"error",
						"debug"
					]
				}
			],
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			],
			"react/prop-types": 0,
			"@typescript-eslint/unbound-method": [
				"error",
				{
					"ignoreStatic": true
				}
			]
		},
		"overrides": [
			{
				"files": [
					"*.js",
					"*.jsx",
					"*.ts",
					"*.tsx"
				],
				"extends": [
					"eslint:recommended",
					"plugin:@typescript-eslint/eslint-recommended",
					"plugin:@typescript-eslint/recommended",
					"plugin:@typescript-eslint/recommended-requiring-type-checking",
					"plugin:prettier/recommended"
				]
			},
			{
				"files": [
					"*.astro"
				],
				"parser": "astro-eslint-parser",
				"parserOptions": {
					"parser": "@typescript-eslint/parser",
					"extraFileExtensions": [
						".astro"
					]
				},
				"extends": [
					"eslint:recommended",
					"plugin:@typescript-eslint/eslint-recommended",
					"plugin:@typescript-eslint/recommended",
					"plugin:@typescript-eslint/recommended-requiring-type-checking",
					"plugin:astro/recommended",
					"plugin:prettier/recommended"
				]
			},
			{
				"files": [
					"*.svelte"
				],
				"processor": "svelte3/svelte3",
				"plugins": [
					"svelte3",
					"@typescript-eslint"
				],
				"extends": [
					"eslint:recommended",
					"plugin:@typescript-eslint/eslint-recommended",
					"plugin:@typescript-eslint/recommended",
					"plugin:@typescript-eslint/recommended-requiring-type-checking"
				],
				"settings": {
					"svelte3/typescript": true
				}
			}
		]
	},
	"eslintIgnore": [
		"/*.ts",
		"/*.cjs",
		"/*.js",
		"test",
		"cypress"
	],
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"arrowParens": "always",
		"plugins": [
			"prettier-plugin-astro",
			"prettier-plugin-svelte"
		],
		"overrides": [
			{
				"files": "*.yml",
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			},
			{
				"files": "**/*.astro",
				"options": {
					"parser": "astro"
				}
			}
		]
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard-scss",
			"stylelint-config-html"
		],
		"rules": {
			"comment-whitespace-inside": null,
			"declaration-block-no-shorthand-property-overrides": true,
			"no-descending-specificity": null,
			"value-keyword-case": null,
			"selector-pseudo-class-no-unknown": [
				true,
				{
					"ignorePseudoClasses": [
						"global"
					]
				}
			]
		}
	},
	"browserslist": {
		"production": [
			"> 0.2%",
			"Firefox ESR",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"cspell": {
		"useGitIgnore": true,
		"words": [
			"astro",
			"astrojs",
			"beforeunload",
			"blockquote",
			"bookinfo",
			"cssnano",
			"deboss",
			"figcaption",
			"fontsource",
			"forgingmodernity",
			"iconify",
			"Joomla",
			"jsalias",
			"keyframes",
			"lcov",
			"maplink",
			"minmax",
			"overscroll",
			"Parens",
			"plaiceholder",
			"purgecss",
			"rgba",
			"smallcaps",
			"stylelint",
			"tabindex",
			"testid",
			"vmax",
			"vmin",
			"vollkorn",
			"Xlarge",
			"xxlarge"
		]
	},
	"pnpm": {
		"patchedDependencies": {
			"@types/leaflet@1.9.3": "patches/@types__leaflet@1.9.3.patch"
		}
	}
}
