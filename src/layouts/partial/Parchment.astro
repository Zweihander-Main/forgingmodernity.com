---
export type Props = { children: any };
---

<main class="parchment">
	<slot />
</main>

<style lang="scss">
	.parchment {
		box-shadow: 2px 3px 20px black, 0 0 125px #8f5922 inset;
		background: v.$color-parchment;
		background-image: v.$parchment-background;

		:global(p),
		:global(.para-text) {
			@include m.parchment-text;
			line-height: 1.5;

			:global(.lead-in) {
				@include m.parchment-emphasis;
			}
		}

		:global(h1),
		:global(h2) {
			background-color: black;
			color: transparent;
			text-shadow: 0 2px 3px rgb(255, 255, 255, 10%);
			-webkit-background-clip: text;
			-moz-background-clip: text;
			background-clip: text;
			filter: brightness(5);
		}

		:global(h1),
		:global(h2),
		:global(h3),
		:global(h4),
		:global(h5),
		:global(h6) {
			opacity: 0.6;
		}

		:global(a) {
			&:hover,
			&:focus,
			&:active,
			&:visited {
				color: initial;
			}

			&:hover {
				text-decoration-thickness: 2px;
			}
		}
	}
</style>
