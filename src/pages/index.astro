---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/Hero.astro';
import BookOverview from '@components/BookOverview.astro';
import Reviews from '@components/Reviews.astro';
import Footer from '@components/Footer.astro';
import { getEntryBySlug } from 'astro:content';
export type Props = Record<string, never>;

const metaCollection = await getEntryBySlug('meta', 'site');
const meta = metaCollection.data;
---

<Layout title={`${meta.shortTitle}: ${meta.subTitle}`}>
	<main>
		<Hero title={meta.shortTitle} subtitle={meta.subTitle} />
		<BookOverview />
		<Reviews />
		<Footer />
	</main>
</Layout>

<style>
	main {
	}
</style>
