---
import Global from '@layouts/Global.astro';
import Markdown from '@layouts/partial/Markdown.astro';
import Footer from '@components/Footer/index.astro';
import authorPic from '@assets/author/author.jpg';
import cssVars from '@styles/_jsalias.module.scss';
import { getCollection, getEntryBySlug } from 'astro:content';
import { Picture } from '@astrojs/image/components';

export type Props = Record<string, never>;

const metaEntry = await getEntryBySlug('meta', 'site');
const { shortTitle, subTitle, author, authorDescription } = metaEntry.data;

const bookInfo = await getEntryBySlug('pages', 'author');
if (!bookInfo) {
	throw new Error('No author item found');
}

const { Content } = await bookInfo.render();

const footerItems = await getCollection('syndication');

const overviewSideMargin = parseInt(cssVars.paddingWidthOverviewSides, 10);
const pictureSizes = `calc(50vw - ${overviewSideMargin}rem})`;
---

<Global title={`${shortTitle}: ${subTitle}`} description={authorDescription}>
	<Markdown>
		<Picture
			src={authorPic}
			alt={author}
			sizes={pictureSizes}
			widths={[400, 800, 1200]}
			quality={90}
			fit="cover"
			position="center"
			class="author"
		/>
		<Content />
		<Footer footerItems={footerItems} authorName={author} />
	</Markdown>
</Global>

<style lang="scss">
	.author {
		width: 50%;
		margin: 0 auto 2rem;
		display: block;
		mix-blend-mode: luminosity;
		opacity: 0.8;
		clip-path: circle(55% at 50% 50%);
	}
</style>
