---
import type { CollectionEntry } from 'astro:content';
import { Image } from '@astrojs/image/components';
import cover from './forging_modernity_cover.jpg';

export interface Props {
	bookInfo: CollectionEntry<'index'>;
	reviewsInfo: CollectionEntry<'index'>;
	footerItems: Array<CollectionEntry<'syndication'>>;
}

const { bookInfo, reviewsInfo, footerItems } = Astro.props;

const { Content: BookInfo } = await bookInfo.render();

const { Content: ReviewsInfo } = await reviewsInfo.render();
---

<div class="overview">
	<section>
		<div class="bookinfo-container">
			<div>
				<Image src={cover} alt="TODO" width={400} />
			</div>
			<div class="bookinfo-text">
				<BookInfo />
			</div>
		</div>
	</section>
	<section>
		<div class="reviews-container">
			<ReviewsInfo />
		</div>
	</section>
	<section>
		<p>
			{
				footerItems.map(({ data: item }) => (
					<li>
						<a href={item.link}>{item.title}</a>
					</li>
				))
			}
		</p>
	</section>
</div>
<style lang="scss">
	section {
		width: 100%;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	.bookinfo-container {
		display: grid;
		grid-template-columns: 1fr 1fr;
		grid-template-rows: 1fr;
		grid-gap: 10rem;
		margin: 5rem 12rem;
	}

	.reviews-container {
		display: grid;
		grid-template-columns: 1fr 1fr;
		grid-template-rows: 1fr;
		grid-gap: 10rem;
		margin: 5rem 12rem;
	}

	.overview {
		text-align: left;
		:global(p) {
			font-size: 1rem;
			opacity: 0.6;
			line-height: 1.5;

			:global(.lead-in) {
				font-weight: 600;
				font-family: 'Vollkorn SC';
				font-size: 1.03em;
			}
		}

		:global(h1),
		:global(h2) {
			background-color: black;
			color: transparent;
			text-shadow: 0 2px 3px rgb(255, 255, 255, 10%);
			-webkit-background-clip: text;
			-moz-background-clip: text;
			background-clip: text;
			filter: brightness(5);
		}

		:global(h1),
		:global(h2),
		:global(h3),
		:global(h4),
		:global(h5),
		:global(h6) {
			opacity: 0.6;
		}
	}

	.bookinfo-text {
		:global(h1) {
			font-size: 3rem;
			margin-bottom: 0;
		}

		:global(h2) {
			font-size: 1.4rem;
			margin-top: 0;
			margin-bottom: 0;
			line-height: 1;
			letter-spacing: 0.04em;
		}

		:global(h3) {
			font-size: 1rem;
			letter-spacing: 0.06em;

			:global(a) {
				color: black;
				text-underline-offset: 0.2em;

				&:hover {
				}
			}
		}
		:global(p) {
			text-align: justify;
		}
	}
</style>
