---
import cover from '@assets/overview/cover.jpg';
import PlaceholderImage from '@components/PlaceholderImage/index.astro';
export interface Props {
	sizes: string;
}

const { sizes } = Astro.props;
---

<div class="book">
	<PlaceholderImage
		publicSrc={'/img/overview/cover.jpg'}
		src={cover}
		alt="Forging Modernity Cover"
		sizes={sizes}
		widths={[400, 800, 1200]}
		quality={90}
		class="cover"
	/>
</div>
<style lang="scss">
	@use 'src/styles/_variables.scss' as v;
	@use 'src/styles/_mixins.scss' as m;

	.book {
		@include m.media('>desktop') {
			display: flex;
			justify-content: center;
			align-items: center;
		}
	}

	.cover {
		max-width: 100%;
		max-height: 100%;
		box-shadow: 0 5px 20px 2px v.$color-shadow;
		height: 100%;
	}
</style>
