---
import cover from '@assets/overview/forging_modernity_cover.jpg';
import { Picture } from '@astrojs/image/components';
export interface Props {
	sizes: string;
}

const { sizes } = Astro.props;
---

<div class="book">
	<Picture
		src={cover}
		alt="Forging Modernity Cover"
		sizes={sizes}
		widths={[400, 800, 1200]}
		format="jpg"
		quality={90}
		fit="cover"
		position="center"
		class="cover"
	/>
</div>
<style lang="scss">
	.book {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.cover {
		max-width: 100%;
		max-height: 100%;
		box-shadow: 0 5px 20px 2px v.$color-shadow;
	}
</style>
