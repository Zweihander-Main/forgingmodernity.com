{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"declaration": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": ["dom", "esnext"],
		"outDir": "public",
		"paths": {
			"@*": ["*"],
			"~*": ["*"]
		},
		"sourceMap": true,
		"target": "ES2021",
		"typeRoots": ["./.typings", "./node_modules/@types"]
	},
	"include": ["src/**/*"]
}
